<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/len_94"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_white_item"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/len_10">

    <ImageView
        android:id="@+id/barber_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_70"
        android:src="@drawable/ic_barber_bg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/barber_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/len_2"
        android:paddingRight="@dimen/len_2"
        android:singleLine="true"
        android:text="王麻子"
        android:textColor="@color/textColorFirst"
        android:textSize="@dimen/textSizeBody" />

    <TextView
        android:id="@+id/barber_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_4"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/len_2"
        android:paddingRight="@dimen/len_2"
        android:singleLine="true"
        android:text="首席设计"
        android:textColor="@color/textColorSecond"
        android:textSize="@dimen/textSizeCaption" />


</LinearLayout>