<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_100"
    android:layout_marginLeft="@dimen/len_16"
    android:layout_marginRight="@dimen/len_16"
    android:background="@drawable/ic_recharge_item_bg">

    <TextView
        android:id="@+id/original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/len_20"
        android:layout_centerVertical="true"
        android:text="@string/label_price"
        android:textStyle="bold"
        android:textSize="@dimen/textSizeTitle"
        android:textColor="@color/textColorRed"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/original_price"
        android:layout_marginLeft="@dimen/len_32"
        android:layout_toLeftOf="@id/buy"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="left|center_vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_recharge_voucher"
            android:textColor="@color/textColorFirst"
            android:textSize="@dimen/textSizeSubhead"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_18"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_recharge_vip"
                android:textColor="@color/textColorThird"
                android:textSize="@dimen/textSizeCaption"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_4"
                android:text="@string/label_recharge_discount"
                android:textSize="@dimen/textSizeCaption"
                android:textColor="@color/textColorRed"
                android:gravity="center"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_8"
            android:text="@string/label_recharge_permanent"
            android:textColor="@color/textColorThird"
            android:textSize="@dimen/textSizeCaption"
            android:gravity="center"/>

    </LinearLayout>


    <TextView
        android:id="@+id/buy"
        android:layout_width="@dimen/len_110"
        android:layout_height="@dimen/len_32"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/len_16"
        android:layout_centerVertical="true"
        android:text="@string/label_recharge_price_and_buy"
        android:textSize="@dimen/textSizeCaption"
        android:textColor="@color/textColorLight"
        android:gravity="center"
        android:background="@drawable/selector_bg_recharge_buy_btn"/>






</RelativeLayout>