<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_12"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/len_10"
    android:paddingBottom="@dimen/len_10"
    android:background="@drawable/coupons_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.4"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/textColorPrice"
                android:text="@string/money"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:textSize="@dimen/textSizeDisplay"
                android:lines="1"
                android:textColor="@color/textColorPrice"
                android:layout_toRightOf="@id/money"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:textSize="@dimen/len_12"
            android:text="全场通用"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/len_12"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="使用规则"
            android:textStyle="bold"
            android:textSize="@dimen/font_14"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/usable_range"
            android:layout_width="wrap_content"
            android:text="使用范围：洗发、剪发、烫发"
            android:layout_marginTop="@dimen/len_4"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_12"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/len_4"
            android:text="有效期：2018年6月30日"
            android:lines="1"
            android:textSize="@dimen/font_12"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:text="立即使用"
            android:visibility="gone"
            android:textSize="@dimen/textSizeCaption"
            android:textColor="@color/textColorLight"
            android:gravity="center"
            android:background="@drawable/selector_bg_order_state_btn"/>

        <TextView
            android:id="@+id/coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:text="已过期"
            android:textSize="@dimen/font_16"
            android:textColor="@color/buttonLightgrayPressedColor"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>