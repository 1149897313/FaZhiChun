<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_setting_name"
            android:textColor="@color/textColorFirst"
            android:textSize="@dimen/textSizeSubhead"
            android:gravity="center"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_0.5"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorLight">

            <!--个人信息-->
            <RelativeLayout
                android:id="@+id/personal_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_50"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16"
                android:background="@drawable/selector_bg_white_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="个人信息"
                    android:textColor="@color/textColorFirst"
                    android:textSize="@dimen/textSizeBody"
                    android:gravity="left|center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_expand"
                    android:scaleType="centerInside"/>

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_0.5"
                android:layout_marginLeft="@dimen/len_16"
                android:layout_marginRight="@dimen/len_16"
                android:background="@color/dividerLineColor"/>


            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_50"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16"
                android:background="@drawable/selector_bg_white_item">

                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/textColorFirst"
                    android:textSize="@dimen/textSizeBody"
                    android:gravity="left|center_vertical"/>

                <ImageView
                    android:id="@+id/phone_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_expand"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/phone_expand"
                    android:layout_marginRight="@dimen/len_44"
                    android:layout_toRightOf="@id/phone_label"
                    android:layout_marginLeft="@dimen/len_30"
                    android:layout_centerVertical="true"
                    android:text="18680809420"
                    android:textSize="@dimen/textSizeBody"
                    android:textColor="@color/textColorSecond"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_10"
            android:orientation="vertical"
            android:background="@color/colorLight"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/general_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_50"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16"
                android:background="@drawable/selector_bg_white_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="通用"
                    android:textColor="@color/textColorFirst"
                    android:textSize="@dimen/textSizeBody"
                    android:gravity="left|center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_expand"
                    android:scaleType="centerInside"/>

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_0.5"
                android:layout_marginLeft="@dimen/len_16"
                android:layout_marginRight="@dimen/len_16"
                android:background="@color/dividerLineColor"/>


            <!--关于发芝春-->
            <RelativeLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_50"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16"
                android:background="@drawable/selector_bg_white_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="关于发芝春"
                    android:textColor="@color/textColorFirst"
                    android:textSize="@dimen/textSizeBody"
                    android:gravity="left|center"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_expand"
                    android:scaleType="centerInside"/>

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_0.5"
                android:layout_marginLeft="@dimen/len_16"
                android:layout_marginRight="@dimen/len_16"
                android:background="@color/dividerLineColor"/>


            <!--客服电话-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_50"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16">

                <TextView
                    android:id="@+id/telephone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="客服电话"
                    android:textColor="@color/textColorFirst"
                    android:textSize="@dimen/textSizeBody"
                    android:gravity="left|center"/>


                <ImageView
                    android:id="@+id/telephone_icon"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/len_4"
                    android:src="@drawable/ic_merchant_phone"
                    android:scaleType="centerInside"/>


                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/telephone_icon"
                    android:layout_marginRight="@dimen/len_30"
                    android:layout_toRightOf="@id/telephone_label"
                    android:layout_marginLeft="@dimen/len_30"
                    android:layout_centerVertical="true"
                    android:text="400-8888-8888"
                    android:textSize="@dimen/textSizeBody"
                    android:textColor="@color/textColorSecond"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/update_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_50"
            android:layout_marginTop="@dimen/len_10"
            android:paddingLeft="@dimen/len_16"
            android:paddingRight="@dimen/len_16"
            android:background="@drawable/selector_bg_white_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="检查更新"
                android:textSize="@dimen/textSizeBody"
                android:textColor="@color/textColorFirst"
                android:gravity="left|center_vertical"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mine_expand"
                android:scaleType="centerInside"/>
        </RelativeLayout>
        
        <!--占位符-->
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        

        <!--退出登录-->
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/len_40"
            android:text="退出登录"
            android:textSize="@dimen/textSizeSubhead"
            android:textColor="@color/textColorLight"
            android:gravity="center"
            android:background="@drawable/selector_bg_setting_logout_btn"/>


    </LinearLayout>

</LinearLayout>