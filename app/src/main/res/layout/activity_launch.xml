<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/ic_launch_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_110"
        android:text="@string/label_launch_title"
        android:textColor="@color/textLaunchBgColor"
        android:textSize="@dimen/textSizeMiddle"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_6"
        android:src="@drawable/ic_launch_logo"
        android:scaleType="centerInside"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_12"
        android:text="@string/label_launch_content"
        android:textColor="@color/textLaunchBgColor"
        android:textSize="@dimen/textSizeBody"
        android:gravity="center"/>


</LinearLayout>
