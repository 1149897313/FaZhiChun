<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowsBackground">

    <!--标题栏-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/statusBarSize"
        android:elevation="@dimen/len_0.5"
        android:outlineProvider="bounds">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_payment_result_dialog_title_name"
            android:textColor="@color/textColorFirst"
            android:textSize="@dimen/textSizeSubhead"
            android:gravity="center"
            android:layout_gravity="center"/>

    </FrameLayout>




    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_60"
            android:src="@drawable/ic_payment_result_label"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_22"
            android:text="@string/label_payment_result_dialog_promat"
            android:textSize="@dimen/textSizeTitle"
            android:textColor="@color/textColorFirst"
            android:textStyle="bold"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:layout_marginTop="@dimen/len_100"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/see_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/label_payment_result_see_order_button"
                android:textSize="@dimen/textSizeBody"
                android:textColor="@color/textColorLight"
                android:gravity="center"
                android:background="@drawable/selector_bg_payment_see_order_btn"/>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/len_20"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/back_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/label_payment_result_back_home"
                android:textSize="@dimen/textSizeBody"
                android:textColor="@color/textColorFirst"
                android:gravity="center"
                android:background="@drawable/selector_bg_payment_back_home_btn"/>


        </LinearLayout>

















    </LinearLayout>





</LinearLayout>