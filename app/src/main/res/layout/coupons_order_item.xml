<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_12"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/len_10"
    android:paddingBottom="@dimen/len_10"
    android:background="@drawable/coupons_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/textColorPrice"
                android:text="@string/money"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_32"
                android:lines="1"
                android:textColor="@color/textColorPrice"
                android:layout_toRightOf="@id/money"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:textSize="@dimen/len_12"
            android:text="全场通用"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/len_12"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="使用规则"
            android:textStyle="bold"
            android:textSize="@dimen/font_14"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/usable_range"
            android:layout_width="wrap_content"
            android:text="使用范围：洗发、剪发、烫发"
            android:layout_marginTop="@dimen/len_4"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_12"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/len_4"
            android:text="有效期：2018年6月30日"
            android:lines="1"
            android:textSize="@dimen/font_12"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/select"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_payment_checked"
        android:gravity="center"
        android:layout_height="wrap_content"/>
</LinearLayout>